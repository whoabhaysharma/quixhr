            "item": [
                {
                    "name": "Register",
                    "event": [
                        {
                            "listen": "test",
                            "script": {
                                "exec": [
                                    "var jsonData = pm.response.json();",
                                    "pm.test(\"Status code is 201\", function () {",
                                    "    pm.response.to.have.status(201);",
                                    "});",
                                    "if (jsonData.success && jsonData.data && jsonData.data.token) {",
                                    "    pm.environment.set(\"authToken\", jsonData.data.token);",
                                    "    pm.collectionVariables.set(\"authToken\", jsonData.data.token);",
                                    "    console.log(\"Token set: \" + jsonData.data.token);",
                                    "}"
                                ],
                                "type": "text/javascript"
                            }
                        }
                    ],
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n    \"email\": \"user@example.com\",\n    \"password\": \"password123\",\n    \"name\": \"John Doe\",\n    \"companyName\": \"Example Corp\",\n    \"role\": \"HR_ADMIN\"\n}",
