# Environment Variables Template
# Copy this file to .env and update the values

# Server
PORT=3000
NODE_ENV=development

# Logging
LOG_LEVEL=info
LOG_DIR=logs

# Database
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/quixhr?schema=public"

# JWT
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379

# AWS SES
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=

# Email
FROM_EMAIL=no-reply@quixhr.com

# Frontend
FRONTEND_URL=http://localhost:3001

# Razorpay Payment Gateway
RAZORPAY_KEY_ID=rzp_test_xxxxxxxxxxxxx
RAZORPAY_KEY_SECRET=your_razorpay_secret_key

# Rate Limiting
# Window in milliseconds (default: 900000 = 15 minutes)
RATE_LIMIT_WINDOW_MS=900000
# Maximum requests per window (default: 1000)
RATE_LIMIT_MAX_REQUESTS=1000
# Skip counting successful requests (2xx responses)
RATE_LIMIT_SKIP_SUCCESS=false
# Skip counting failed requests (4xx/5xx responses)
RATE_LIMIT_SKIP_FAILED=false