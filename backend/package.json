{
  "name": "quixhr-backend",
  "version": "1.0.0",
  "description": "QuixHR Backend API - Express.js REST API for HR Management System",
  "main": "dist/index.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:worker\"",
    "dev:server": "ts-node-dev --respawn --transpile-only src/index.ts",
    "dev:worker": "ts-node-dev --respawn --transpile-only src/workers/email.worker.bootstrap.ts",
    "dev:watch": "ts-node-dev --respawn --transpile-only src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "worker": "node dist/workers/email.worker.bootstrap.js"
  },
  "keywords": [
    "express",
    "typescript",
    "rest-api",
    "hr",
    "nodejs"
  ],
  "author": "QuixHR Team",
  "license": "MIT",
  "dependencies": {
    "@aws-sdk/client-ses": "^3.958.0",
    "bcryptjs": "^2.4.3",
    "bullmq": "^5.66.3",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "date-fns": "^4.1.0",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "handlebars": "^4.7.8",
    "helmet": "^7.1.0",
    "ioredis": "^5.8.2",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.3",
    "morgan": "^1.10.0",
    "nodemailer": "^7.0.12",
    "pg": "^8.11.3",
    "razorpay": "^2.9.6",
    "zod": "^4.2.1"
  },
  "devDependencies": {
    "@prisma/client": "^6.19.1",
    "@types/bcryptjs": "^2.4.6",
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.8",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/morgan": "^1.9.9",
    "@types/node": "^20.10.0",
    "@types/nodemailer": "^7.0.4",
    "@types/pg": "^8.10.9",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "concurrently": "^9.2.1",
    "eslint": "^8.54.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "prisma": "^6.19.1",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.3.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}